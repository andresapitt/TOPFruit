<?xml version="1.0" encoding="UTF-8" ?><Alloy>
	<Window class="container" title="NEWS">
		<View class="color_seperator" height="1dp" width="Ti.UI.FILL" backgroundImage="/images/common/color_sep.png" />
		<ScrollView class="scrollView" >
			<View class="news_item" onClick="openEvents">
				<ImageView image="/images/icons/events.png" class="news_image" />
				<Label class="news_title">UPCOMING EVENTS</Label>
				<ImageView image="/images/common/chevron.png" class="news_arrow" />
			</View>
			<View class="news_item" onClick="openBestBars">
				<ImageView image="/images/icons/bestbars.png" class="news_image" />
				<Label class="news_title">WORLDS BEST BARS</Label>
				<ImageView image="/images/common/chevron.png" class="news_arrow" />
			</View>
			<View class="news_item" onClick="openBarSmarts">
				<ImageView image="/images/icons/smarts.png" class="news_image" />
				<Label class="news_title">BAR SMARTS</Label>
				<ImageView image="/images/common/chevron.png" class="news_arrow" />
			</View>
			<View class="news_item" onClick="openCompetitions">
				<ImageView image="/images/icons/comp.png" class="news_image" />
				<Label class="news_title">COMPETITIONS</Label>
				<ImageView image="/images/common/chevron.png" class="news_arrow" />
			</View>
			<View class="news_item" onClick="openOffers">
				<ImageView image="/images/icons/offers.png" class="news_image" />
				<Label class="news_title">OFFERS</Label>
				<ImageView image="/images/common/chevron.png" class="news_arrow" />
			</View>
		</ScrollView>
		<RightNavButton>
        	<Button image="/images/icons/home.png" onClick="goToHome" />
		</RightNavButton>
		<LeftNavButton>
        	<Button image="/images/icons/back.png" onClick="closeWindow" />
		</LeftNavButton>
	</Window>
</Alloy>