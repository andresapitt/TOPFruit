<Alloy>
	<Window class="container" title="NEWS">
		<View platform="android" height="50dp" width="Ti.UI.FILL">
			<View width="Ti.UI.FILL" height="Ti.UI.FILL" backgroundColor="#fff" opacity="1" />
			<View width="Ti.UI.FILL">
				<View backgroundImage="/images/icons/back.png" onClick="closeWindow" left="10dp" top="10dp" bottom="10dp" height="30dp" width="30dp" />
				<Label color="#313646" class="page_title" >NEWS</Label>
				<View backgroundImage="/images/icons/home.png" onClick="goToHome" right="10dp" top="10dp" bottom="10dp" height="30dp"  width="30dp" />
			</View>
		</View>
		<View platform="mobileweb" height="50dp" width="Ti.UI.FILL">
			<View width="Ti.UI.FILL" height="Ti.UI.FILL" backgroundColor="#fff" opacity="1" />
			<View width="Ti.UI.FILL">
				<View backgroundImage="/images/icons/back.png" onClick="closeWindow" left="10dp" top="10dp" bottom="10dp" height="30dp" width="30dp" />
				<Label color="#313646" class="page_title" >NEWS</Label>
				<View backgroundImage="/images/icons/home.png" onClick="goToHome" right="10dp" top="10dp" bottom="10dp" height="30dp"  width="30dp" />
			</View>
		</View>
		<View class="color_seperator" height="1dp" width="Ti.UI.FILL" backgroundImage="/images/common/color_sep.png" />
		<ScrollView class="scrollView" >
			<View class="news_item" onClick="openEvents">
				<ImageView image="/images/icons/events.png" platform="ios" class="news_image" />
				<ImageView image="/images/icons/events.png" platform="android" class="news_image" />
				<ImageView image="./images/icons/events.png" platform="mobileweb" class="news_image" />
				<Label class="news_title">UPCOMING EVENTS</Label>
				<ImageView image="/images/common/chevron.png" platform="ios" class="news_arrow" />
				<ImageView image="/images/common/chevron.png" platform="android" class="news_arrow" />
				<ImageView image="./images/common/chevron.png" platform="mobileweb" class="news_arrow" />
			</View>
			<View class="news_item" onClick="openBestBars">
				<ImageView image="/images/icons/bestbars.png" platform="ios" class="news_image" />
				<ImageView image="/images/icons/bestbars.png" platform="android" class="news_image" />
				<ImageView image="./images/icons/bestbars.png" platform="mobileweb" class="news_image" />
				<Label class="news_title">WORLDS BEST BARS</Label>
				<ImageView image="/images/common/chevron.png" platform="ios" class="news_arrow" />
				<ImageView image="/images/common/chevron.png" platform="android" class="news_arrow" />
				<ImageView image="./images/common/chevron.png" platform="mobileweb" class="news_arrow" />
			</View>
			<!--
			<View class="news_item" onClick="openBarSmarts">
				<ImageView image="/images/icons/smarts.png" platform="ios" class="news_image" />
				<ImageView image="/images/icons/smarts.png" platform="android" class="news_image" />
				<ImageView image="./images/icons/smarts.png" platform="mobileweb" class="news_image" />
				<Label class="news_title">BAR SMARTS</Label>
				<ImageView image="/images/common/chevron.png" platform="ios" class="news_arrow" />
				<ImageView image="/images/common/chevron.png" platform="android" class="news_arrow" />
				<ImageView image="./images/common/chevron.png" platform="mobileweb" class="news_arrow" />
			</View>
			-->
			<View class="news_item" onClick="openCompetitions">
				<ImageView image="/images/icons/comp.png" platform="ios" class="news_image" />
				<ImageView image="/images/icons/comp.png" platform="android" class="news_image" />
				<ImageView image="./images/icons/comp.png" platform="mobileweb" class="news_image" />
				<Label class="news_title">COMPETITIONS</Label>
				<ImageView image="/images/common/chevron.png" platform="ios" class="news_arrow" />
				<ImageView image="/images/common/chevron.png" platform="android" class="news_arrow" />
				<ImageView image="./images/common/chevron.png" platform="mobileweb" class="news_arrow" />
			</View>
		</ScrollView>
		<RightNavButton platform="ios">
        	<Button image="/images/icons/home.png" onClick="goToHome" />
		</RightNavButton>
		<LeftNavButton platform="ios">
        	<Button image="/images/icons/back.png" onClick="closeWindow" />
		</LeftNavButton>
	</Window>
</Alloy>