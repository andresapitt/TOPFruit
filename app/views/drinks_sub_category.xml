<Alloy>
	<Window class="container" title="DRINKS">
		<View class="color_seperator" height="1dp" width="Ti.UI.FILL" backgroundImage="/images/common/color_sep.png" />
		<ScrollView class="scrollView" >
			<View id="drink_types_sub" layout="vertical" height="Ti.UI.SIZE">
				
			</View>
			<View layout="vertical" height="Ti.UI.SIZE">
				<View layout="horizontal" id="social_hor_view_subcategory" width="240dp" height="Ti.UI.SIZE" top="10dp" >
					<View class="socialBtn_view" id="twitterParent_subcategory">
						<Button image="/images/icons/twitterbird.png" class="socialBtn twitter" title="Twitter" />
					</View>
					<View class="socialBtn_view" id="facebookParent_subcategory">
						<Button image="/images/icons/facebookIcon.png" class="socialBtn facebook" title="Facebook" />
					</View>
				</View>
			</View>
		</ScrollView>
		<RightNavButton>
        	<Button image="/images/icons/home.png" onClick="goToHome" />
		</RightNavButton>
		<LeftNavButton>
        	<Button image="/images/icons/back.png" onClick="closeWindow" />
		</LeftNavButton>
	</Window>
</Alloy>