<Alloy>
	<Window class="container" title="ABOUT">
		<View platform="android" height="50dp" width="Ti.UI.FILL" top="0dp">
			<View width="Ti.UI.FILL" height="Ti.UI.FILL" backgroundColor="#fff" opacity="1" />
			<View width="Ti.UI.FILL">
				<View backgroundImage="/images/icons/back.png" onClick="closeWindow" left="10dp" top="10dp" bottom="10dp" height="30dp" width="30dp" />
				<Label color="#313646" class="page_title">ABOUT</Label>
				<View backgroundImage="/images/icons/home.png" onClick="goToHome" right="10dp" top="10dp" bottom="10dp" height="30dp"  width="30dp" />
			</View>
		</View>
		<View platform="mobileweb" height="50dp" width="Ti.UI.FILL" top="0dp">
			<View width="Ti.UI.FILL" height="Ti.UI.FILL" backgroundColor="#fff" opacity="1" />
			<View width="Ti.UI.FILL">
				<View backgroundImage="/images/icons/back.png" onClick="closeWindow" left="10dp" top="10dp" bottom="10dp" height="30dp" width="30dp" />
				<Label color="#313646" class="page_title">ABOUT</Label>
				<View backgroundImage="/images/icons/home.png" onClick="goToHome" right="10dp" top="10dp" bottom="10dp" height="30dp"  width="30dp" />
			</View>
		</View>
		<View class="color_seperator" height="1dp" width="Ti.UI.FILL" backgroundImage="/images/common/color_sep.png" top="0dp" />
		<ScrollView class="scrollView" >
			<View class="brand_item">
				<!--<ImageView image="/images/brands/jameson_banner.png" class="brand_image" height="158dp" bottom="5dp" />-->
				<View id="brand_banner_image" width="Ti.UI.FILL" bottom="5dp" height="Ti.UI.SIZE"></View>
				<Label id="brand_title">...</Label>
				<Label id="brand_desc_text">...</Label>
				<View layout="horizontal" id="social_hor_view" height="Ti.UI.SIZE" bottom="10dp" >
					<View class="socialBtn_view" id="twitterParent">
						<Button id="twitterBtn" image="/images/icons/twitterbird.png" platform="ios" class="socialBtn twitter" title="Twitter" />
						<Button id="twitterBtn" image="/images/icons/twitterbird.png" platform="android" class="socialBtn twitter" title="Twitter" />
						<!--<Button id="twitterBtn" image="./images/icons/twitterbird.png" platform="mobileweb" class="socialBtn twitter" title="Twitter" />-->
						<Label id="twitterBtn_brandDesc" platform="mobileweb" class="socialBtn twitter"  />
					</View>
					<View class="socialBtn_view" id="facebookParent">
						<Button id="facebookBtn" image="/images/icons/facebookIcon.png" platform="ios" class="socialBtn facebook" title="Facebook" />
						<Button id="facebookBtn" image="/images/icons/facebookIcon.png" platform="android" class="socialBtn facebook" title="Facebook" />
						<!--<Button id="facebookBtn" image="./images/icons/facebookIcon.png" platform="mobileweb" class="socialBtn facebook" title="Facebook" />-->
						<Label id="facebookBtn_brandDesc" platform="mobileweb" class="socialBtn facebook"  />
					</View>
					<View class="socialBtn_view" id="websiteParent">
						<Button id="websiteBtn" image="/images/icons/websiteIcon.png" platform="ios" class="socialBtn website" title="Website" />
						<Button id="websiteBtn" image="/images/icons/websiteIcon.png" platform="android" class="socialBtn website" title="Website" />
						<Button id="websiteBtn" image="./images/icons/websiteIcon.png" platform="mobileweb" class="socialBtn website" title="Website" />
						<!--<Label id="websiteBtn_brandDesc" platform="mobileweb" class="socialBtn website"  />-->
					</View>
				</View>
				<!--<ImageView image="/images/common/chevron.png" class="news_arrow" />-->
			</View>
		</ScrollView>
		<RightNavButton platform="ios">
        	<Button image="/images/icons/home.png" onClick="goToHome" />
		</RightNavButton>
		<LeftNavButton platform="ios">
        	<Button image="/images/icons/back.png" onClick="closeWindow" />
		</LeftNavButton>
	</Window>
</Alloy>   