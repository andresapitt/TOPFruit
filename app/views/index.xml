<Alloy>
	<NavigationWindow id="win1" platform="ios" class="win1">
		<Window class="container" title="HOME" id="home_window">
			<View class="color_seperator" height="1dp" width="Ti.UI.FILL" backgroundColor="#f00" backgroundImage="/images/common/color_sep.png" />
			<View id="mix_of_month_view" height="202dp" backgroundColor="#ddd">
				<!--<ImageView image="/images/home_screen/mix_month_bg.png" width="Ti.UI.FILL" height="Ti.UI.FILL" />-->
				<View id="mix_banner_image_container" width="Ti.UI.FILL" height="Ti.UI.FILL" />
				<View id="mix_bottle_image_container" left="5dp" width="30%" height="Ti.UI.SIZE" />
				<View id="mix_of_the_month_anim_view" height="Ti.UI.SIZE" layout="vertical" width="60%" right="-25dp" opacity="0">
					<Label id="mix_title">Mix of the Month bloop bloop lboop blooopb</Label>
					<Label id="mix_desc">Absolut Citron & Tonic bloop bloop lboop blooopb</Label>
				</View>
			</View>
			<View class="color_seperator" height="1dp" width="Ti.UI.FILL" backgroundColor="#f00" backgroundImage="/images/common/color_sep.png" />
			<View height="Ti.UI.SIZE" backgroundColor="#ddd" layout="horizontal" width="100%">
				<View id="cocktails_home_btn" class="home_menu_btn" onClick="openDrinks">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView image="/images/icons/drinks.png" class="menu_image" />
						<Label class="menu_title">Cocktails</Label>
					</View>
				</View>
				<View id="search_home_btn" class="home_menu_btn" onClick="openSearch">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView image="/images/icons/search.png" class="menu_image" />
						<Label class="menu_title">Search</Label>
					</View>
				</View>
			</View>
			<View height="Ti.UI.SIZE" backgroundColor="#fff" layout="horizontal" width="100%">
				<View id="tips_home_btn" class="home_menu_btn" onClick="openTips">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView image="/images/icons/tips.png" class="menu_image" />
						<Label class="menu_title">Top Tips</Label>
					</View>
				</View>
				<View id="favourites_home_btn" class="home_menu_btn" onClick="openFavourites">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView image="/images/icons/fav.png" class="menu_image" />
						<Label class="menu_title">Favourites</Label>
					</View>
				</View>
			</View>
			<View height="Ti.UI.SIZE" backgroundColor="#fff" layout="horizontal" width="100%">
				<View id="news_home_btn" class="home_menu_btn" onClick="openNews">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView image="/images/icons/news.png" class="menu_image" />
						<Label class="menu_title">News</Label>
					</View>
				</View>
				<View id="brand_home_image" class="home_menu_btn" onClick="openBrands">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView image="/images/icons/ourbrands.png" class="menu_image" />
						<Label class="menu_title">Our Brands</Label>
					</View>
				</View>
			</View>
		<LeftNavButton>
        	<Button image="/images/icons/tandc.png" onClick="openTandCs" />
		</LeftNavButton>
		</Window>
	</NavigationWindow>
	
	<Window exitOnClose="true" class="container" platform="android" title="HOME" id="win1" backgroundColor="#f00">
		<View class="color_seperator" height="1dp" width="Ti.UI.FILL" backgroundColor="#f00" backgroundImage="/images/common/color_sep.png" />
		<View id="mix_of_month_view" height="40%" backgroundColor="#ddd">
			<View id="mix_banner_image_container" width="Ti.UI.FILL" height="Ti.UI.FILL" />
			<View id="mix_bottle_image_container" left="5dp" width="30%" height="Ti.UI.SIZE" />
			<View id="mix_of_the_month_anim_view" height="Ti.UI.SIZE" layout="vertical" width="60%" right="-25dp" opacity="0">
				<Label id="mix_title">Mix of the Month  bloop bloop lboop blooopb</Label>
				<Label id="mix_desc">Absolut Citron & Tonic bloop bloop lboop blooopb</Label>
			</View>
		</View>
		<View class="color_seperator" height="1dp" width="Ti.UI.FILL" backgroundColor="#f00" backgroundImage="/images/common/color_sep.png" />
			<View id="menu_row_1" class="menu_row" backgroundColor="#fff" layout="horizontal" width="Ti.UI.FILL">
				<View id="cocktails_home_btn" class="home_menu_btn" onClick="openDrinks">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView height="30%" image="/images/icons/drinks.png" class="menu_image" />
						<Label class="menu_title">Cocktails</Label>
					</View>
				</View>
				<View id="search_home_btn" class="home_menu_btn" onClick="openSearch">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView height="30%" image="/images/icons/search.png" class="menu_image" />
						<Label class="menu_title">Search</Label>
					</View>
				</View>
			</View>
			<View  id="menu_row_2" class="menu_row" backgroundColor="#fff" layout="horizontal" width="Ti.UI.FILL">
				<View id="tips_home_btn" class="home_menu_btn" onClick="openTips">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView height="30%" image="/images/icons/tips.png" class="menu_image" />
						<Label class="menu_title">Top Tips</Label>
					</View>
				</View>
				<View id="favourites_home_btn" class="home_menu_btn" onClick="openFavourites">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView height="30%" image="/images/icons/fav.png" class="menu_image" />
						<Label class="menu_title">Favourites</Label>
					</View>
				</View>
			</View>
			<View  id="menu_row_3" class="menu_row" backgroundColor="#fff" layout="horizontal" width="Ti.UI.FILL">
				<View class="home_menu_btn" onClick="openNews">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView height="30%" image="/images/icons/news.png" class="menu_image" />
						<Label class="menu_title">News</Label>
					</View>
				</View>
				<View class="home_menu_btn" onClick="openBrands">
					<View height="Ti.UI.SIZE" layout="vertical">
						<ImageView height="30%" image="/images/icons/ourbrands.png" class="menu_image" />
						<Label class="menu_title">Our Brands</Label>
					</View>
				</View>
			</View>
	</Window>
			
</Alloy>