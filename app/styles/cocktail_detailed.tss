".container": {
	backgroundColor:"white",
	titleAttributes:{
		color:Alloy.Globals.PrimaryColor,
		font: {
			fontFamily:Alloy.Globals.MainFont, 
			fontSize:"18dp"
		}
	},
	barColor:"#fff",
	layout:'vertical',
	tintColor:Alloy.Globals.PrimaryColor,
	navTintColor:Alloy.Globals.PrimaryColor,
	height: Ti.UI.FILL
},
".scrollView":{
	layout:"vertical",
	bottom:"0dp",
	width:"320dp",
	contentWidth:"320dp",
	disableBounce:true,
	showVerticalScrollIndicator:true,
	showHorizontalScrollIndicator:false,
	backgroundColor:"#efefef",
	height:Ti.UI.FILL
},
".recipe_container":{
	left:"5dp", 
	right:"5dp", 
	width:Ti.UI.FILL, 
	height:Ti.UI.SIZE, 
	backgroundColor:"#fff",
	borderRadius:"4dp",
	borderColor: "#d1d1d1",
	borderWidth: 1,
	layout:"vertical",
	top:"10dp",
},
".recipe_title":{
	color:Alloy.Globals.PrimaryColor,
	font: {
		fontFamily:Alloy.Globals.BoldFont, 
		fontSize:"18dp"
	},
	top:"15dp",
	left:"5dp",
	right:"5dp",
	width:Ti.UI.FILL,
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
},
".recipe_subtitle":{
	color:Alloy.Globals.PrimaryColor,
	font: {
		fontFamily:Alloy.Globals.BoldFont, 
		fontSize:"14dp"
	},
	top:"10dp",
	left:"5dp",
	right:"5dp",
	width:Ti.UI.FILL,
	textAlign: Ti.UI.LEFT,
},
".recipe_subtext":{
	color:Alloy.Globals.PrimaryColor,
	font: {
		fontFamily:Alloy.Globals.MainFont, 
		fontSize:"11dp"
	},
	top:"2dp",
	left:"12dp",
	right:"5dp",
	//width:Ti.UI.FILL,
	textAlign: Ti.UI.LEFT,
	touchEnabled:false
},
".commentBtn":{
	top:"10dp",
	color:"#fff",
	backgroundColor: Alloy.Globals.PrimaryColor,
	font: {
		fontFamily:Alloy.Globals.BoldFont, 
		fontSize:"14dp"
	},
	width:"160dp",
	height:"33dp",
	borderRadius:"4dp",
},
".socialBtn_view":{
	width:Ti.UI.SIZE,
	height:Ti.UI.SIZE
}
".socialBtn":{
	width:"105dp",
	height:"34dp",
	backgroundColor:"#d1d1d1",
	borderRadius:"2dp",
	font: {
		fontFamily:Alloy.Globals.BoldFont, 
		fontSize:"14dp"
	},
	color:"#fff",
	tintColor:"#fff"
},
".twitter":{
	backgroundColor:"none",
	backgroundGradient: {
        type: 'linear',
        startPoint: { x: '50%', y: '0%' },
        endPoint: { x: '50%', y: '100%' },
        colors: [ { color: '#6db3e1', offset: 0.0}, { color: '#428ecf', offset: 1.0 } ]
       }
},
".facebook":{
	backgroundColor:"none",
	backgroundGradient: {
        type: 'linear',
        startPoint: { x: '50%', y: '0%' },
        endPoint: { x: '50%', y: '100%' },
        colors: [ { color: '#4b69a5', offset: 0.0}, { color: '#253d7d', offset: 1.0 } ]
      },
      left:"30dp"
},
"#rating_picker":{
	height:"240dp",
	bottom:"-240dp",
	width:Ti.UI.FILL,
	backgroundColor:'#fff'
},
".tap_to_close":{
	height:"40dp",
	backgroundColor: "#eee",
	borderRadius:0,
	borderColor: "#898989",
	borderWidth: 1,
	width: Ti.UI.FILL,
	color: Alloy.Globals.PrimaryColor,
	textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
	font: {
        fontSize: '16dp',
        fontFamily: Alloy.Globals.BoldFont,
    }
},
"#rating_title":{
	top:"10dp",
	color:Alloy.Globals.PrimaryColor,
	font: {
		fontFamily:Alloy.Globals.MainFont, 
		fontSize:"16dp"
	}
}
